@model IEnumerable<SistemaClinico.Models.PrescripcionPaciente>

@{
    ViewBag.Title = "PrescripcionDetalle";
}

<h2>PrescripcionDetalle</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="form-group">
    @Html.Label("Paciente", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.Editor("nombrePaciente", @ViewData["nombrePaciente"].ToString(), new { htmlAttributes = new { @class = "form-control", disabled ="disabled"} })
    </div>
</div>

<div class="form-group">
    @Html.Label("Doctor", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.Editor("nombreDoctor", @ViewData["nombreDoctor"].ToString(), new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
    </div>
</div>

<div class="form-group">
    @Html.Label("Fecha", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.Editor("fecha", @ViewData["fecha"].ToString(), new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
    </div>
</div>

<div class="form-group">
    @Html.Label("hora", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.Editor("hora", @ViewData["hora"].ToString(), new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE_MEDICAMENTO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CICLO_CONSUMO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VIA_ADMI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.INSTRUCCIONES_AD)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE_MEDICAMENTO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CICLO_CONSUMO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VIA_ADMI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.INSTRUCCIONES_AD)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
<table align="center">
    <tr>
        <td>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input value="Generar PDF" class="btn btn-success" />
                </div>
            </div>
        </td>
        <td>&nbsp;  &nbsp; &nbsp;  &nbsp;</td>
        <td>
            <div div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input onclick="location.href='@Url.Action("ListadoPrescripcionPaciente", "Usuarios", new { idpaciente = @ViewData["idpaciente"], msj = 0 })'" type="button" value="Volver" class="btn btn-finalizar" />
                </div>
            </div>
        </td>
    </tr>
</table>