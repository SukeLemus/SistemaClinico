@*@model IEnumerable<SistemaClinico.Models.CitasPaciente>*@
@model IPagedList<SistemaClinico.Models.ListadoCitasPaciente>
@{
    ViewBag.Title = "Index";
}
@using PagedList;
@using PagedList.Mvc;
@using SistemaClinico.Controllers;
<h2>Index</h2>


<table class="table">
    <tr>
        @*<th>
            @Html.DisplayName("ID_PACIENTE")
        </th>*@
        <th>
            @Html.DisplayName("Tipo de cita ")
        </th>
        <th>
            @Html.DisplayName("Nombre departamento ")
        </th>

        <th>
            @Html.DisplayName("Descripción ")
        </th>

        <th>
            @Html.DisplayName("Turno ")
        </th>
        <th>
            @Html.DisplayName("Fecha ")
        </th>
        <th>
            @Html.DisplayName("Hora ")
        </th>
        <th>
            @Html.DisplayName("Estado ")
        </th>

        <th>Opciones</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TIPO_CITA)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NOMBRE_DEPARTAMENTO)
    </td>





    <td>
        @Html.DisplayFor(modelItem => item.DESCRIPCION)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.TURNO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FECHA)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HORA)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ESTADO)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
    }

</table>
