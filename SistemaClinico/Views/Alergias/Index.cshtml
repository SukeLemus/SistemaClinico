@*@model IEnumerable<SistemaClinico.Models.Alergias>*@
@model IPagedList<SistemaClinico.Models.Alergias>

@{
    ViewBag.Title = "Index";
}
@using PagedList;
@using PagedList.Mvc;
@using SistemaClinico.Controllers;
<div class="titulo_general"><h1>Alergias</h1></div>
<p>
    @Html.ActionLink("Crear nueva alergia", "Create")
</p>
<table class="table_lista">
    <tr class="tr_lista">
        <th class="th_lista">
            @Html.DisplayName("Nombre Alergia")
        </th>
        <th class="th_lista">
            @Html.DisplayName("Descripción")
        </th>
        <th class="th_lista">
            @Html.DisplayName("Opciones")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="tr_lista">
            <td class="td_lista">
                @Html.DisplayFor(modelItem => item.NOMBRE_ALERGIA)
            </td>
            <td class="td_lista">
                @Html.DisplayFor(modelItem => item.DESCRIPCION)
            </td>
            <td class="td_lista">
                @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, i => Url.Action("Index", "Alergias", new { i, search = Request.QueryString["search"] }))
