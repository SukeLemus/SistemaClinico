@model SistemaClinico.Models.EnfermedadSintoma

@{
    ViewBag.Title = "DeleteSintEnf";
}

@*<h2>DeleteSintEnf</h2>*@
<div class="titulo_general">
    <h1>@ViewData["nombreEnf"] </h1>
</div>

<h3>¿Está seguro de eliminar este síntoma?</h3>
<div>

    <table class="table_lista">
        <tr class="tr_lista">
            <th class="th_lista">
                @Html.DisplayName("Sintoma ")
            </th>
        </tr>
        <tr class="tr_lista">
            <td class="td_lista" align="center">

                @Html.Label(ViewData["nombreSint"].ToString(), new { htmlAttributes = new { @class = "form-control" } })

            </td>
        </tr>
    </table>

   


    

    <table align="center">
        <tr>
            <td>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />

                    </div>
                }
            </td>
            <td>
                <div div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input onclick="location.href='@Url.Action("Index", "Enfermedades")'" type="button" value="Volver" class="btn btn-finalizar" />
                    </div>
                </div>
            </td>
        </tr>
    </table>

</div>
